---
layout: null
permalink: /search.json
---
{%- assign all_tags = "" | split: "" -%}
{%- for collection in site.collections -%}
  {%- for item in collection.docs -%}
    {%- if item.tags -%}
      {%- assign all_tags = all_tags | concat: item.tags -%}
    {%- endif -%}
  {%- endfor -%}
{%- endfor -%}
{%- assign unique_sorted_tags = all_tags | uniq | sort -%}
[
  {
    "tag": "{{ unique_sorted_tags[0] }}"
  },
  {
    "tag": "{{ unique_sorted_tags[1] }}"
  },
  {
    "tag": "{{ unique_sorted_tags[2] }}"
  }
]
