---
layout: none
permalink: /search.json
---

[
{%- assign first = true -%}

{%- for coll in site.collections -%}
  {%- for page in coll.docs -%}

    {%- if first -%}
      {%- assign first = false -%}
    {%- else -%}
      ,
    {%- endif -%}

    {
      "title": {{ page.title | jsonify }},
      "url": {{ page.url | relative_url | jsonify }},
      "description": {{ page.description | default:page.excerpt | jsonify }}
    }

  {%- endfor -%}
{%- endfor -%}

]
