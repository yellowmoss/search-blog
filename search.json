---
layout: null
---

[
{% assign docs ="" | split: "" %}

{%- for collection in site.search_collections -%}
   {%- assign docs = docs | concat: site.collections[name].docs -%}
{%- endfor -%}

{%- assign sorted = docs | sort: "tags" | sort: "collection" -%}

{%- for item in sorted -%}

{
  "title": {{ item.title | jsonify }},
  "url": {{ item.url | relative_url | jsonify }},
  "tags": {{ item.tags | jsonify }},
  "collection": {{ item.collection | jsonify }},
  "content": {{ item.content | strip_html | strip_newlines | jsonify }}
}{% unless forloop.last %},{% endunless %}
{%- endfor -%}
]
